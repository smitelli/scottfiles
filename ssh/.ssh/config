Include config.d/*

Match exec "[ -e ~/.ssh/id_%n_ed25519 ]"
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_%n_ed25519

Match exec "[ -e ~/.ssh/id_%n_rsa ]"
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_%n_rsa

Match exec "[ -e ~/.ssh/id_%n_ecdsa ]"
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_%n_ecdsa

Match exec "[ -e ~/.ssh/id_ed25519 ]"
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_ed25519

Match exec "[ -e ~/.ssh/id_rsa ]"
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_rsa

Match exec "[ -e ~/.ssh/id_ecdsa ]"
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_ecdsa

Host *
    GlobalKnownHostsFile /dev/null
    UserKnownHostsFile ~/.ssh/known_hosts
    UpdateHostKeys yes

    ServerAliveCountMax 3
    ServerAliveInterval 10
